<div class="container">

    <div class="row">
        <div class="center col-sm-12">
            <img src="/assets/img/burger.png" alt="burger img" id="burgerImage">
        </div>
    </div>

    <div class="row">
        <h1>Eat Da Burger</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <h2>Burgers You Haven't Eaten (Yet)</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <ul>
                {{this.burger_name}}
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true" id="devourit">
                    <button class="btn-primary" type="submit" id="eatBurger">Devour It!</button>
                </form>
            </ul>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-sm-6">
            <h2>Burgers You've Eaten</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <ul>
                {{this.burger_name}}
            </ul>
            {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="center col-sm-12">

            <h2>Add a Burger</h2>
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name" placeholder="New burger goes here">
                <button type="submit" id="addBurger">Add Burger</button>
            </form>
        </div>

    </div>

</div>